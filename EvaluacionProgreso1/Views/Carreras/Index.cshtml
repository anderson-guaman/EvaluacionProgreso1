@model IEnumerable<EvaluacionProgreso1.Models.Carrera>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p class="btn btn-outline-success">
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-responsive table-light">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre_Carrera)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Campus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Numero_Semestre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_Carrera)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Campus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Numero_Semestre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
